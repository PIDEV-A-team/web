{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <script src="https://js.stripe.com/v3/"></script>
{% endblock %}
{% block content %}
    <section class="bg-home bg-gradient" id="home" style="padding-bottom: 40px !important">
    </section>
    <section class="features" id="features">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8">
                    <ul class="nav nav-pills nav-justified features-tab mb-5" id="pills-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="pills-customize-tab" data-toggle="pill" href="#pills-customize" role="tab" aria-controls="pills-customize" aria-selected="true">
                                <div class="clearfix">
                                    <div class="features-icon float-right">
                                        <i class="pe-7s-pen h1"></i>
                                    </div>
                                    <div class="d-none d-lg-block mr-4">
                                        <h5>Modifier votre enfant</h5>
                                        <p>Modifier les details de l'enfant !</p>
                                    </div>
                                </div>
                            </a>
                        </li>
                    </ul>
                    <div class="custom-modal-text text-left">

                        <div class="form-group">
                            <div class="col-sm-7">
                                <p class="text-muted font-13"><strong>Image :</strong> </p>

                                <input type ="text" class="form-control"name="description"value={{ enfant.imageEnfant}}>

                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-sm-7">
                                <p class="text-muted font-13"><strong>Nom :</strong> </p>

                                <input type ="text" class="form-control"name="description"value={{ enfant.nomEnfant}}>

                            </div>


                        </div>
                        <div class="form-group">

                            <div class="col-sm-7">
                                <p class="text-muted font-13"><strong>Prenom :</strong> </p>

                                <input type ="text" class="form-control"name="description"value={{ enfant.prenomEnfant}}>

                            </div>

                        </div>
                        <div class="form-group">

                            <div class="col-sm-7">
                                <p class="text-muted font-13"><strong>Classe :</strong> </p>

                                <input type ="text" class="form-control"name="description"value={{ enfant.idClasse.libelleCla}}>

                            </div>

                        </div>

                        <div class="form-group">

                            <div class="col-sm-7">
                                <p class="text-muted font-13"><strong>Date de naissnace :</strong> </p>

                                <input type ="text" class="form-control"name="description"value={{ enfant.datenEnfant}}>

                            </div>

                        </div>

                        <div class="form-group">



                            <a class="btn btn-success btn-md waves-effect waves-light" href="{{ path('modifier',{'idEnfant': enfant.idEnfant}) }} ">
                                Enregistrer
                            </a>
                            <a class="btn btn-danger waves-effect width-md waves-light" href="{{ path('enfant_supprimer',{'idEnfant': enfant.idEnfant}) }} ">
                                Supprimer
                            </a>
                            <a class="btn btn-light waves-effect waves-light mr-1" href="{{ path('enfant') }}">
                                Annuler
                            </a>


                        </div>

                    </div>
                    <!-- end tab-content -->
                </div>
            </div>
            <!-- end row -->
        </div>
        <!-- end container-fluid -->
    </section>
{% endblock %}
