{% extends 'baseadmin.html.twig' %}
{% form_theme form 'form/form_errors.html.twig' %}
{% block content %}

    <div class="content-page">
        <div class="content">

            <!-- Start Content-->
            <div class="container-fluid">

                <div class="row">
                    <div class="col-12">
                        <div class="card-box">
                            <h4 class="header-title mt-0 mb-3">Ajout Garde</h4>
                            {{ form_start(form, {'attr': {'class': 'form-horizontal' , 'role' : 'form' , 'novalidate': 'novalidate' }}) }}
                            <div class="form-group row">
                                {{ form_label(form.nomGarde ,null , {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                                <div class="col-sm-7">
                                    {{ form_widget(form.nomGarde , {'attr': {'class': 'form-control' , 'placeholder': 'Nom'}}) }}
                                </div>
                                {{ form_errors(form.nomGarde) }}
                            </div>
                            <div class="form-group row">
                                {{ form_label(form.dureeGarde ,null , {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                                <div class="col-sm-7">
                                    {{ form_widget(form.dureeGarde , {'attr': {'class': 'form-control' , 'placeholder': 'Horaire'}}) }}
                                </div>
                                {{ form_errors(form.dureeGarde) }}
                            </div>

                            <div class="form-group row">
                                {{ form_label(form.prixGarde ,null , {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                                <div class="col-sm-7">
                                    {{ form_widget(form.prixGarde, {'attr': {'class': 'form-control' , 'placeholder': 'Prix' }}) }}
                                </div>
                                {{ form_errors(form.prixGarde) }}
                            </div>

                            <div class="form-group row">
                                {{ form_label(form.descriptionGarde ,null , {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                                <div class="col-sm-7">
                                    {{ form_widget(form.descriptionGarde , {'attr': {'class': 'form-control' , 'placeholder': 'Description'}}) }}
                                </div>
                                {{ form_errors(form.descriptionGarde) }}
                            </div>
                            <div class="form-group row">
                                <div class="offset-sm-4 col-sm-8">
                                    {{ form_widget(form) }}
                                    <input type="submit" class="btn btn-primary waves-effect waves-light mr-1" value="Confimer">
                                    <a class="btn btn-secondary waves-effect waves-light" href="{{ path('garde_index') }}">
                                        Annuler
                                    </a>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div><!-- end card-box -->
                    </div><!-- end col -->
                </div>
                <!-- end row -->
            </div> <!-- container-fluid -->

        </div> <!-- content -->
    </div>

{% endblock %}
